<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    card_view:cardElevation="@dimen/card_album_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/card_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingEnd="3dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <LinearLayout
            android:id="@+id/view_commande_date"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_commande_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dimanche"
                android:textSize="12sp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:layout_margin="0dp"
                tools:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_commande_dd_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="27sp"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/tv_commande_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Août 2018"
                android:textSize="12sp"
                android:includeFontPadding="false"
                tools:textColor="@color/white"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/view_content_commande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="start"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_commande_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CO1809-0002"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    tools:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_commande_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Romuald YOUMSI"
                    android:textSize="12sp"
                    android:textColor="@color/contact_number"
                    tools:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_commande_produits_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 Produits"
                    android:textSize="12sp"
                    android:textColor="@color/contact_number"
                    tools:textColor="@color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_commande_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="150 €"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/red_amount"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>