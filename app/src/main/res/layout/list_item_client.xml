<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/row_padding">

    <ImageView
        android:id="@+id/iv_thumbnail_client"
        android:layout_width="@dimen/logo"
        android:layout_height="@dimen/logo"
        android:background="@drawable/logo_isales_small"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/row_padding" />

    <TextView
        android:id="@+id/tv_name_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_thumbnail_client"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/contact_name"
        tools:text="Romuald YOUMSI"
        android:textSize="@dimen/contact_name" />

    <TextView
        android:id="@+id/tv_phone_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_client"
        android:layout_toEndOf="@id/iv_thumbnail_client"
        tools:text="Bonamoussadi, Douala, Cameroun"
        android:textColor="@color/contact_number"
        android:textSize="@dimen/contact_number" />

</RelativeLayout>