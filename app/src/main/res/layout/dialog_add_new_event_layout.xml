<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Créer un événement"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="20dp"/>

    <EditText
        android:id="@+id/dialog_add_new_event_libelle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Entrer Libellé..."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/dialog_add_new_event_lieu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Entrer Lieu..."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Switch
        android:id="@+id/dialog_add_new_event_journee_st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Événement sur la(les) journée(s)"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Switch
        android:id="@+id/dialog_add_new_event_disponible_st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votre Disponibilité - Occupé"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:checked="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/dialog_add_new_event_clock_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_access_time_black"/>
        <TextView
            android:id="@+id/dialog_add_new_event_clock_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Début : "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/dialog_add_new_event_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00 AM"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_add_new_event_description_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Entrer Description..."
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_add_new_event_cancelevent_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler event"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@color/gray"
            android:layout_margin="10dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/dialog_add_new_event_addevent_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter event"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@color/gray"
            android:layout_margin="10dp"
            android:padding="5dp"/>

    </LinearLayout>



</LinearLayout>